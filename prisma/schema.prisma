generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @unique
  email        String
  firstName    String
  lastName     String
  profileImage String
  isAdmin      Boolean
   orders Order[]
  

  createdAt DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Product {
  id          String        @id @default(uuid())
  name        String
  description String
  status      ProductStatus
  price       Int
  images      String[]
  category    Category
  categoryType CategoryType
  isFeatured  Boolean       @default(false)

  createdAt DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Banner {
  id          String @id @default(uuid())
  title       String
  imageString String

  createdAt DateTime @default(now())
   updatedAt    DateTime @updatedAt
}

model Order {
  id     String @id @default(uuid())
  status String @default("pending")
  amount Int

  User   User  @relation(fields: [userId], references: [id])
  userId String


  createdAt DateTime @default(now())
   updatedAt    DateTime @updatedAt
}




enum ProductStatus {
  draft
  published
  archived
}

enum Category {
  men
  women
  kids
}
enum CategoryType {
  Clothing
  Footwear
  Accessories
  Electronics
}